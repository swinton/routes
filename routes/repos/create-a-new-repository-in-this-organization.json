  "name": "Create a new repository in this organization",
  "params": [
    {
      "name": "org",
      "type": "string",
      "required": true,
      "description": "",
      "location": "url"
    },
    {
      "name": "name",
      "type": "string",
      "description": "The name of the repository.",
      "required": true,
      "location": "body"
    },
    {
