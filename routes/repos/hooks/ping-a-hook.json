{
  "name": "Ping a hook",
  "enabledForApps": false,
  "method": "POST",
  "path": "/repos/:owner/:repo/hooks/:hook_id/pings",
  "params": [
    {
      "name": "owner",
      "type": "string",
      "required": true,
      "description": "",
      "location": "url"
    },
    {
      "name": "repo",
      "type": "string",
      "required": true,
      "description": "",
      "location": "url"
    },
    {
      "name": "hook_id",
      "type": "string",
      "required": true,
      "description": "",
      "location": "url"
    }
  ],
  "description": "This will trigger a [ping event](/enterprise/2.12/webhooks/#ping-event) to be sent to the hook.",
  "responses": [
    {
      "headers": {
        "status": "204 No Content",
        "content-type": "application/json; charset=utf-8"
      }
    }
  ],
  "idName": "ping-hook",
  "documentationUrl": "https://developer.github.com/enterprise/2.12/v3/repos/hooks/#ping-a-hook"
}
